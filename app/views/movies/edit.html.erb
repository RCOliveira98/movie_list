<div class="container mt-2 p-2 shadow">
    <h1 class="title">
        Edit movie: <%= @movie.title %>
    </h1>
    
    <%= form_for @movie, method: "put", url: {controller: 'movies', action: 'update'} do |f| %>
    <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <div class="field">
        <%= f.label :release_date %>
        <%= f.date_select :release_date,
            start_year: 1900,
            order: [:day, :month, :year] %>
    </div>
    <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description, :class => 'form-control' %>
    </div>
    
    <div class="actions">
        <%= f.submit 'Enviar', :class => 'btn btn-primary'%>
        <%= link_to 'Cancelar', movies_path, :class => "btn btn-danger" %>
    </div>
    <% end %>
</div>