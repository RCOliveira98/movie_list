<%= form_for @movie, method: @method, url: {controller: 'movies', action: @action} do |f| %>
  <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <div class="field">
        <%= f.label :release_date %>
        <%= f.date_select :release_date,
            start_year: 1900,
            order: [:day, :month, :year] %>
    </div>
    <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description, :class => 'form-control' %>
    </div>
    
    <div class="mt-2">
        <%= f.submit 'Enviar', :class => 'btn btn-primary'%>
        <%= link_to 'Cancelar', movies_path, :class => "btn btn-danger" %>
    </div>
<% end %>